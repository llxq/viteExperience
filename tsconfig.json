{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "types": ["vite/client"],
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@router/*": ["./src/router/*"],
      "@api/*": ["./src/api/*"],
      "@interface": ["./src/interface/index.ts"],
      "@http": ["./src/api/index.ts"],
      "@mixins/*": ["./src/mixins/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
